@model List<Employee>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <table class="table">
        <thead>
            
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                
                <th>Gender</th>
                <th>DOB</th>
                
                <th>JoinDate</th>
                <th>Deaprtment</th>
                <th>Designation</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.ID</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Address</td>
                    <td>@employee.Gender</td>
                    <td>@employee.Dob?.ToString("MMMM,dd,yyyy")</td>
                    <td>@employee.JoinDate.ToString("MMMM,dd,yyyy")</td>
                    <td>@employee.Department</td>
                    <td>@employee.Designation</td>
                    <td> <a href="Employee/Edit/@employee.ID"><i class="bi bi-pencil-fill"></i> </a> </td>
                    <td> <a href="Employee/Delete"><i class="bi bi-trash3-fill"></i> </a> </td>
                  

                </tr>


            }


        </tbody>
    </table>
}
